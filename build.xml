<project default="jar" basedir="." >
	<property name="src" value="src"/>
	<property name="bin" value="bin"/>
	<basename property="pwd" file="${basedir}"/>
	<target name="compile">
		<mkdir dir="${bin}"/>
		<javac srcdir="${src}" 
			destdir="${bin}"
			source="1.6"
			fork="true"
			debug="true"/>
	</target>
	<target name="jar" depends="compile">
		<echo message="${basedir}"/>
		<jar destfile="SearchJars.jar">
			<fileset dir="${bin}">
				<exclude name="test/*"/>
			</fileset>
			<fileset dir="${basedir}">
				<include name="README"/>
			</fileset>
			<manifest>
				<attribute name="Main-Class" value="searchJars.SearchJars"/>
			</manifest>
		</jar>
	</target>
	<target name="package-source">
		<jar destFile="SearchJars-src.jar">
			<fileset dir="..">
				<include name="${pwd}/${src}/**"/>
				<include name="${pwd}/build.xml"/>
				<include name="${pwd}/README" />
			</fileset>
		</jar>
	</target>
	<target name="clean">
		<delete defaultexcludes="off" includeemptydirs="true" quiet="true">
			<fileset dir="${bin}" />
			<fileset dir="." >
				<include name="SearchJars*.jar"/>
			</fileset>
		</delete>
	</target>
</project>
